---
export interface Props {
  title: string;
  description?: string;
  frontmatter?: any;
}

const { title, description = "A modern blog built with Astro", frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-white text-gray-900">
    <header class="bg-white/80 backdrop-blur-sm border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-6xl mx-auto px-4 py-4">
        <nav class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
            Modern Blog
          </a>
          <div class="space-x-8">
            <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
            <a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a>
            <a href="/about" class="hover:text-blue-600 transition-colors">About</a>
          </div>
        </nav>
      </div>
    </header>
    
    <main>
      {frontmatter ? (
        <!-- Blog post layout -->
        <article class="max-w-4xl mx-auto px-4 py-16">
          <header class="text-center mb-12">
            {frontmatter.tags?.[0] && (
              <div class="inline-block bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-2 rounded-full text-sm font-medium mb-4">
                {frontmatter.tags[0]}
              </div>
            )}
            <h1 class="text-5xl font-bold text-gray-900 mb-6 leading-tight">
              {frontmatter.title}
            </h1>
            <div class="flex items-center justify-center space-x-4 text-gray-600 mb-8">
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
                {frontmatter.author}
              </span>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                </svg>
                {frontmatter.pubDate?.toString().slice(0, 10)}
              </span>
            </div>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
              {frontmatter.description}
            </p>
          </header>
          
          <div class="prose prose-lg max-w-3xl mx-auto">
            <slot />
          </div>
        </article>
      ) : (
        <!-- Regular page layout -->
        <slot />
      )}
    </main>
    
    <footer class="bg-gray-900 text-white mt-16">
      <div class="max-w-6xl mx-auto px-4 py-12">
        <div class="text-center">
          <p class="text-gray-400">&copy; 2024 Modern Blog. Built with Astro.</p>
        </div>
      </div>
    </footer>
  </body>
</html> 
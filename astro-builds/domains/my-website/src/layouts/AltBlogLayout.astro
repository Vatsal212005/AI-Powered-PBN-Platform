---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section>
    <div class="py-16">
      <!-- Alternative layout with different styling -->
      <div class="max-w-4xl mx-auto">
        <!-- Header with different layout -->
        <header class="text-center mb-12">
          <div class="inline-block bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-2 rounded-full text-sm font-medium mb-4">
            {frontmatter.tags[0]}
          </div>
          <h1 class="text-5xl font-bold text-gray-900 mb-6 leading-tight">
            {frontmatter.title}
          </h1>
          <div class="flex items-center justify-center space-x-4 text-gray-600 mb-8">
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
              </svg>
              {frontmatter.author}
            </span>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
              {frontmatter.pubDate.toString().slice(0, 10)}
            </span>
          </div>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            {frontmatter.description}
          </p>
        </header>

        <!-- Featured image with different styling -->
        <div class="mb-12">
          <Image
            width={1280}
            height={720}
            src={frontmatter.image.url}
            alt={frontmatter.image.alt}
            class="w-full h-96 object-cover rounded-2xl shadow-2xl"
          />
        </div>

        <!-- Tags with different styling -->
        <div class="flex flex-wrap justify-center gap-2 mb-12">
          {frontmatter.tags.map((tag) => (
            <a 
              href={`/tags/${tag}`}
              class="px-4 py-2 bg-gray-100 hover:bg-blue-100 text-gray-700 hover:text-blue-700 rounded-full text-sm font-medium transition-colors duration-200"
            >
              #{tag}
            </a>
          ))}
        </div>

        <!-- Content with different styling -->
        <div class="prose prose-lg max-w-3xl mx-auto">
          <slot />
        </div>
      </div>
    </div>
  </section>
</BaseLayout> 
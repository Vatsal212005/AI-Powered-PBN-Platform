---
import { getCollection } from "astro:content";
import fs from 'fs';
import path from 'path';

// Read the layout config
const configPath = path.join(process.cwd(), 'src', 'layout-config.json');
const layoutConfig = JSON.parse(fs.readFileSync(configPath, 'utf8'));

export async function getStaticPaths() {
  const blogEntries = await getCollection("posts");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Dynamically import the active layout
const LayoutComponent = await import(`../../../../../templates/layouts/${layoutConfig.activeLayout}.astro`);
const MarkdownPostLayout = LayoutComponent.default;
---

<MarkdownPostLayout frontmatter={entry.data}>
  <Content />
</MarkdownPostLayout>
